<%- include('../partials/header') %>

<h1>Lista de Productos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% if (productos.length > 0) { %>
            <% productos.forEach(producto => { %>
                <tr>
                    <td><%= producto.nombreProducto %></td>
                    <td><%= producto.descripcion %></td>
                    <td>$<%= producto.precio %></td>
                    <td><%= producto.stock %></td>
                    <td>
                        <a href="/productos/editar/<%= producto._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/productos/eliminar/<%= producto._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="5" class="text-center">No hay productos disponibles.</td>
            </tr>
        <% } %>
    </tbody>
</table>

<a href="/productos/nuevo" class="btn btn-primary">Registrar Nuevo Producto</a>

<%- include('../partials/footer') %>
